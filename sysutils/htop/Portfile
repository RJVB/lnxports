# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:ft=tcl:et:sw=4:ts=4:sts=4

PortSystem          1.0
PortGroup           github 1.0
PortGroup           conflicts_build 1.0
PortGroup           LTO 1.0

github.setup        htop-dev htop 0875b9e04264c0deb60c98c2585f54bb573e4731
fetch.type          git
version             3.2.2.166
worksrcdir          ${name}-git
distname            ${name}-git

epoch               1
name                htop
categories          sysutils
platforms           darwin
maintainers         cal openmaintainer
license             GPL-2

description         htop is an interactive text-mode process viewer for Unix \
                    systems. It aims to be a better 'top'. 

long_description    ${description}

depends_build       port:autoconf \
                    port:automake \
                    port:libtool

# depends_lib-append  port:ncurses
# for some reason I get an empty screen using port:ncurses
conflicts_build-append ncurses

patch.pre_args      -Np1
patchfiles-append   patch-altN-instead-of-FN.diff

pre-configure {
    if {![file exists ${worksrcpath}/configure]
        || [file mtime ${worksrcpath}/configure.ac] > [file mtime ${worksrcpath}/configure]} {
        system -W ${worksrcpath} "sh autogen.sh"
    }
}

configure.env       LT_SYS_LIBRARY_PATH=${prefix}/lib \
                    LDFLAGS=-Wl,-rpath=${prefix}/lib
# configure.env-append \
#                     HTOP_ncurses_CONFIG_SCRIPT=${prefix}/bin/ncurses6-config \
#                     HTOP_ncursesw_CONFIG_SCRIPT=${prefix}/bin/ncursesw6-config

#                     --enable-hwloc \
configure.args-append \
                    --enable-dependency-tracking \
                    --enable-linux-affinity \
                    --enable-unicode \
                    --enable-proc \
                    --enable-cgroup \
                    --enable-taskstats \
                    --enable-setuid \
                    --enable-delayacct \
                    --enable-sensors \
                    --enable-unwind \
                    --enable-capabilities
                    
