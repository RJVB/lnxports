# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:ft=tcl:et:sw=4:ts=4:sts=4

PortSystem          1.0
PortGroup           locale_select 1.0
PortGroup           LTO 1.0

name                vala
version             0.48.5
set branch          [join [lrange [split ${version} .] 0 1] .]
categories          lang
maintainers         nomaintainer
description         Compiler for the GObject type system
long_description    Vala is a new programming language that aims to bring modern programming \
                    language features to GNOME developers without imposing any additional \
                    runtime requirements and without using a different ABI compared to \
                    applications and libraries written in C.

platforms           darwin
license             LGPL-2.1+

homepage            https://wiki.gnome.org/Projects/Vala
master_sites        gnome:sources/${name}/${branch}/

use_xz              yes

checksums           rmd160  e1a0d8e35373636a311718e76c05285648d03d35 \
                    sha256  a3d4c0e0dadd4c64962205d2f448af72d6bd8c67919d984012b8a41b843ec757
#                     size    3445096

depends_build       port:pkgconfig \
                    port:bison \
                    bin:flex:flex \
                    bin:help2man:help2man \
                    port:libxslt

depends_lib         path:lib/pkgconfig/glib-2.0.pc:glib2 \
                    bin:dot:graphviz

configure.args      --disable-silent-rules \
                    --disable-dependency-tracking

post-destroot {
    file delete ${destroot}${prefix}/bin/valac
    # put a wrapper around valac so it also searches for installed stuff
    # in the system locations.
    xinstall -m 755 ${filespath}/valac.sh ${destroot}${prefix}/bin/valac
    reinplace "s|@PREFIX@|${prefix}|g" ${destroot}${prefix}/bin/valac
    reinplace "s|@VERSION@|0.48|g" ${destroot}${prefix}/bin/valac
}

livecheck.type      gnome
