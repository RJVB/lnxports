# $Id: Portfile 145945 2016-02-22 08:53:45Z devans@macports.org $

PortSystem          1.0
PortGroup           muniversal 1.0

name                mlt
epoch               3
version             6.2.0
categories          multimedia
maintainers         dennedy.org:dan
license             GPL-2+

description         Open source multimedia framework - core libraries
long_description    MLT is an open source multimedia framework, designed and developed for \
                    television broadcasting. It provides a toolkit for broadcasters, video \
                    editors, media players, transcoders, web streamers and many more types of \
                    applications. The functionality of the system is provided via an assortment \
                    of ready to use tools, xml authoring components, and an extendible plug-in \
                    based API. \
                    \
                    This package contains the files necessary for running applications that use \
                    the MLT multimedia framework.
homepage            http://www.mltframework.org/
master_sites        sourceforge:project/mlt/mlt
platforms           darwin

checksums           rmd160  3d9fb67e6d90aae844b0187f31df351c8bae8fd1 \
                    sha256  5acdc8760cc28b19e9dc291f66cbe3faa2bc5e8d53e2de3ef543eb5be0feb9f4

# subport qt5-${name} {
#     replaced_by     ${name}-qt5
#     PortGroup       obsolete 1.0
#     description     ${description} - Qt5 version
#     long_description \
#                     ${description}
# }
# 
# subport ${name}-qt5 {
#     description     ${description} - Qt5 version
#     long_description \
#                     ${long_description} Built against Qt5.
# }
subport qt5-${name} {
    description     ${description} - Qt5 version
    long_description \
                    ${long_description} Built against Qt5.
}

if {${subport} eq "${name}"} {
    conflicts       ${name}-qt5 qt5-${name}
    PortGroup       qt4 1.0
} else {
    conflicts       ${name}
    PortGroup       qt5 1.0
}

platform darwin {
    depends_build-append \
                    port:git \
                    port:doxygen
    depends_lib-append \
                    port:atk \
                    port:frei0r-plugins \
                    path:lib/libavcodec.dylib:ffmpeg \
                    port:libsamplerate \
                    port:libsdl \
                    port:libsdl_image \
                    port:libvorbis \
                    port:sox \
                    port:libxml2 \
                    port:libexif
}
platform linux {
    configure.env-append \
                    PKG_CONFIG_PATH=/opt/ffmpeg/lib/pkgconfig
}

# NB: qt-includedir can and should be set to ${qt_includes_dir},
# not ${qt_includes_dir}/Qt !!
configure.args-append \
                    --enable-gpl \
                    --qt-libdir=${qt_libs_dir} \
                    --qt-includedir=${qt_includes_dir} \
                    --disable-jackrack \
                    --disable-mmx \
                    --disable-gtk2 \
                    --disable-swfdec

platform darwin 10 {
    if {${build_arch} eq "x86_64"} {
        configure.args-delete --disable-mmx
    }
}

configure.cflags-append     "-I${prefix}/include"
configure.cflags-append     "-I${qt_includes_dir}"
configure.ldflags-delete    "-L${prefix}/lib"
configure.ldflags-append    -Wl,-rpath=${prefix}/lib -Wl,-rpath=${qt_libs_dir}

# This is no longer required?
