configure.args-append \
                    -DBUILD_SHARED_LIBS=ON \
                    -DSIMDJSON_DEVELOPER_MODE=OFF

patchfiles          patch-build-flags-on-x86.diff

variant testing description {build this variant if you want to run the tests (no need to install it)} {
    configure.args-replace \
                    -DSIMDJSON_DEVELOPER_MODE=OFF \
                    -DSIMDJSON_DEVELOPER_MODE=ON
    pre-test {
        ui_warn "Many tests may fail if ${subport} v${version} is not yet installed!"
    }
    test.run        yes
    test.post_args  -wkj${build.jobs}
}
