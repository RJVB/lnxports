PortSystem          1.0
PortGroup           github 1.1
PortGroup           makefile 1.0
compwrap.add_compiler_flags yes
PortGroup           LTO 1.0
PortGroup           save_configure_cmd 1.0

github.setup        enzo1982 smooth a7e64e52f73c9cf4a95f8d98284a0375b70d3bd3
fetch.type          git
version             0.9.10.42 ; revision 1
distname            ${name}-git

categories          gnome graphics x11
platforms           linux darwin
license             Artistic-2
maintainers         nomaintainer
description         ${name} is a class library for user interfaces written in C++
long_description    ${name} is an object oriented C++ class library for Windows, \
                    macOS, Linux and most Unix-like operating systems. \
                    It provides basic functionality and platform support for \
                    applications and libraries. \
                    \n \
                    \nFeatures provided by smooth include:\
                    \n* user interface API with various widgets\
                    \n* simple to use multithreading API\
                    \n* file and network IO interface\
                    \n* completely transparent Unicode and software \
                    internationalization support\
                    \n* a libxml2 based XML parser\

homepage            http://www.smooth-project.org
github.tarball_from releases

depends_lib-append  path:lib/pkgconfig/gtk+-3.0.pc:gtk3 \
                    port:bzip2 \
                    port:curl \
                    port:fribidi \
                    path:include/turbojpeg.h:libjpeg-turbo \
                    port:libxml2 \
                    port:gettext

patchfiles          patch-fix-libxml2-includes.diff \
                    patch-fix-dylib-install-path.diff

variant compact86 conflicts compact72 description {make the UI more compact by assuming a 86DPI display} {
    patchfiles-append \
                    patch-reduce-default-dpi-to-86.diff
}

variant compact72 conflicts compact86 description {make the UI more compact by assuming a 72DPI display} {
    patchfiles-append \
                    patch-reduce-default-dpi-to-72.diff
}

if {![variant_isset compact72]} {
    default_variants-append \
                    +compact86
}

makefile.prefix_name prefix
